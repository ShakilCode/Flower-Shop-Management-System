<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/invoice_bg"
    tools:context=".Activities.InvoiceActivity">


    <EditText
        android:id="@+id/txt_I_ProductName"
        android:layout_width="322dp"
        android:layout_height="0dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="217dp"
        android:textStyle="italic"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="13dp"
        android:ems="10"
        android:hint="Enter Product Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txt_I_ProductId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_I_Qty"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="45dp"
        android:ems="10"
        android:hint="Quantity"
        android:textStyle="italic"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btn_I_SearchProduct"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_I_Price" />

    <EditText
        android:id="@+id/txt_I_ProductId"
        android:layout_width="325dp"
        android:layout_height="0dp"
        android:textStyle="italic"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="9dp"
        android:ems="10"
        android:hint="Product Id"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txt_I_Category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_I_ProductName" />

    <EditText
        android:id="@+id/txt_I_Category"
        android:layout_width="327dp"
        android:layout_height="0dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="44dp"
        android:textStyle="italic"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Category"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txt_I_Price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_I_ProductId" />

    <EditText
        android:id="@+id/txt_I_Price"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="9dp"
        android:textStyle="italic"
        android:ems="10"
        android:hint="Price"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txt_I_Qty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_I_Category" />

    <Button
        android:id="@+id/btn_I_SearchProduct"
        android:layout_width="192dp"
        android:layout_height="0dp"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="89dp"
        android:textStyle="italic"
        android:layout_marginBottom="152dp"
        android:backgroundTint="@color/material_dynamic_primary60"
        android:text="search product"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_I_ProductId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_I_Qty" />

</androidx.constraintlayout.widget.ConstraintLayout>